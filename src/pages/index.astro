---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION, MY_SITE } from '../config'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'
import Masthead from '../components/Masthead.astro'
import { Image } from '@astrojs/image/components'
import { getCollection } from 'astro:content';


const posts = (await getCollection('guide'))


---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header title={SITE_TITLE} />
    <main class="pt-[56px] xl:space-y-5">
      <Masthead />
      <h1 class="font-silkScreen text-center text-expresso-300 text-xl py-2">
        Welcome
      </h1>
      <Content>
        <section>
          <p class="mb-8 indent-4 text-center">
            Blog posts are separarated in multiple folder. 
            In order to get started and write new posts, you can start creating new notes in the content folder. 
            It will automaticly add new content to the view.
        </section>
        <hr
          class="border-top border-expresso-400 dark:border-expresso-100 my-4 xl:my-10"
        />
        <section>
          <h1 class="font-silkScreen py-2 text-expresso-300 text-xl">
            Guide
          </h1>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 xl:grid-cols-3 xl:gap-10 px-10">
            {
              posts.map(post => (
                <li class="text-center mb-4">
                  <a href={post.slug}>
                    <Image
                      class="border border-expresso-300 rounded-xl"
                      src={post.data.heroImage ?? "/placeholder-social.jpg"}
                      width={720 * 2}
                      aspectRatio={2.0}
                      alt="Thumbnail"
                    />
                    <div class="mt-3 text-xl text-expresso-300 font-silkScreen">
                      {post.data.title}
                    </div>
                    <div class="opacity-70 text-expresso-300">
                      {post.data.description}
                    </div>
                  </a>
                </li>
              ))
            }
          </ul>
        </section>
        <hr
          class="border-top border-expresso-400 dark:border-expresso-100 my-4 xl:my-10"
        />
        <section>
          <h1 class="font-silkScreen py-2 text-expresso-300 text-xl">
            React
          </h1>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 xl:grid-cols-3 xl:gap-10 px-10">
            {
              posts.map(post => (
                <li class="text-center mb-4">
                  <a href={post.slug}>
                    <Image
                      class="border border-expresso-300 rounded-xl"
                      src={post.data.heroImage ?? "/placeholder-social.jpg"}
                      width={720 * 2}
                      aspectRatio={2.0}
                      alt="Thumbnail"
                    />
                    <div class="mt-3 text-xl text-expresso-300 font-silkScreen">
                      {post.data.title}
                    </div>
                    <div class="opacity-70 text-expresso-300">
                      {post.data.description}
                    </div>
                  </a>
                </li>
              ))
            }
          </ul>
        </section>
        
      </Content>
    </main>
    <Footer />
  </Body>
</html>

